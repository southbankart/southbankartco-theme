{% comment %}
  Simple shipping information snippet with SEO structured data
  
  Usage:
  {% render 'shipping-trust-signals' %}
{% endcomment %}

{%- comment -%} Include structured data for SEO {%- endcomment -%}
{% render 'shipping-schema' %}

{%- liquid
  assign free_delivery_threshold = settings.free_delivery_threshold | default: 5000
  assign free_collection_threshold = settings.free_collection_threshold | default: 4000
  assign standard_shipping_price = settings.standard_shipping_price | default: 495
  assign standard_shipping_name = settings.standard_shipping_name | default: "Standard Delivery"
  assign standard_shipping_description = settings.standard_shipping_description | default: "Tracked delivery with signature required"
  assign standard_shipping_days = settings.standard_shipping_days | default: "3-5 working days"
-%}

<div class="shipping-information">
  <div class="shipping-benefits-grid">
    <div class="shipping-benefit">
      <div class="shipping-benefit-icon">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="1" y="3" width="15" height="13"></rect>
          <path d="m16 8 4 4-4 4"></path>
          <path d="M20 12H8"></path>
        </svg>
      </div>
      <div class="shipping-benefit-details">
        <div class="shipping-benefit-name">{{ standard_shipping_name }}</div>
        <div class="shipping-benefit-meta">
          <span class="shipping-price">{{ standard_shipping_price | money }}</span>
          <span class="shipping-time">{{ standard_shipping_days }}</span>
        </div>
      </div>
    </div>
    
    {%- if product.selected_or_first_available_variant.store_availabilities.size > 0 and free_collection_threshold > 0 -%}
      <div class="shipping-benefit">
        <div class="shipping-benefit-icon">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
            <circle cx="12" cy="10" r="3"></circle>
          </svg>
        </div>
        <span class="shipping-benefit-text">Free click & collect in store</span>
      </div>
    {%- endif -%}
    
    <div class="shipping-benefit">
      <div class="shipping-benefit-icon">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
          <polyline points="9,22 9,12 15,12 15,22"></polyline>
        </svg>
      </div>
      <span class="shipping-benefit-text">Returns available</span>
    </div>
  </div>
</div>

<style>
.shipping-information {
  margin-top: 20px;
  padding: 0;
}

.shipping-benefits-grid {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.shipping-benefit {
  display: flex;
  align-items: flex-start;
  gap: 12px;
  font-size: 15px;
  color: #2c2b2a;
  line-height: 1.4;
}

.shipping-benefit-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 20px;
  height: 20px;
  color: #2c2b2a;
  flex-shrink: 0;
  margin-top: 2px;
}

.shipping-benefit-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.shipping-benefit-name {
  font-weight: 500;
  font-size: 15px;
  color: #2c2b2a;
}

.shipping-benefit-meta {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 14px;
}

.shipping-benefit-text {
  font-weight: 400;
  font-size: 15px;
}

.shipping-price {
  font-weight: 600;
  color: #2c2b2a;
}

.shipping-time {
  color: #6c757d;
  font-size: 14px;
}

@media (min-width: 768px) {
  .shipping-benefits-grid {
    gap: 18px;
  }
  
  .shipping-benefit {
    font-size: 16px;
  }
  
  .shipping-benefit-text {
    font-size: 16px;
  }
}
</style>
